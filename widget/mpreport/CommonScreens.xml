<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <actions>
                <property-map resource="MpReportUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>

                <set field="layoutSettings.companyName" from-field="uiLabelMap.MpReportCompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.MpReportCompanySubtitle" global="true"/>

                <set field="activeApp" value="mpreport" global="true"/>
                <set field="activeComp" value="MPREPORT" global="true"/>
                <set field="applicationMenuName" value="MainAppBar" global="true"/>
                <set field="applicationMenuLocation" value="component://mpstyle/widget/mpreport/MpReportMenus.xml" global="true"/>
                <set field="applicationTitle" value="${uiLabelMap.MpReportApplication}" global="true"/>
            </actions>
            <widgets>
                <include-screen name="GlobalDecorator" location="component://common/widget/CommonScreens.xml"/>
            </widgets>
        </section>
    </screen>

    <screen name="MpReportCommonDecorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="MPREPORT" action="_VIEW"/>
                            </condition>
                            <widgets>
                                <decorator-section-include name="body"/>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.MpReportViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
     <screen name="CommonConfigurationDecorator">
        <section>
            <actions>
                <property-map resource="MpReportUiLabels" map-name="uiLabelMap" global="true"/>
                <set field="systemResourceId" value="${activeApp}"/>
                <set field="headerItem" value="reportConfig"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="MPREPORT" action="_ADMIN"/>
                            </condition>
                            <widgets>
                                <include-menu name="ConfigurationTabBar" location="component://mpstyle/widget/mpreport/MpReportMenus.xml"/>
                                <include-menu name="ConfigurationSubTabBar" location="component://mpstyle/widget/mpreport/MpReportMenus.xml"/>
                                <decorator-section-include name="body"/>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.MpReportViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    
</screens>